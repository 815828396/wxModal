/* public/dialog/dialog.wxss */
.opacity { opacity: .6 }
.dialog-filter {
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .1);
}
.dialog_wrap {
  position: relative;
  width: 600rpx;
  height: 760rpx;
  background:rgba(255,255,255,1);
  border-radius:12rpx;
  overflow: hidden;
}
.dialog_img {
  width: 440rpx;
  height: 440rpx;
  margin: 0 auto;
}
.dialog_img.mt40 {
  margin-top: 40rpx;
}
.dialog_close {
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  margin: 10rpx 10rpx 0 0;
}
.dialog_content {
  text-align: center;
  color: #1EA0FF;
  font-size: 36rpx;
}
.dialog_btn {
  position: absolute;
  bottom: 50rpx;
  left: 50%;
  width: 500rpx;
  transform: translateX(-250rpx);
  /* margin: 0 auto; */
}
